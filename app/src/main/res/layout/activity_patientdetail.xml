<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="28"
    tools:context=".patientdetail">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="28">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="415dp"
                android:layout_height="40dp"
                android:alpha="28"
                android:background="#1EFFFFFF"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="28">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="415dp"
                android:layout_height="40dp"
                android:alpha="28"
                android:background="#1EFFFFFF"
                android:text="age: 35"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="28">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="504dp"
                android:layout_height="match_parent"
                android:alpha="28"
                android:background="#1EFFFFFF"
                android:text="address: 73a route de neuf brisach, colmar"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="28">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="415dp"
                android:layout_height="match_parent"
                android:alpha="28"
                android:background="#1EFFFFFF"
                android:text="treatment :1 doliprane  \n treatment 2: good sleeping  \n treatment 3 : ............"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="28">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="28"
                android:orientation="vertical" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="28">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="28"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:alpha="28"
                    android:background="?android:attr/listDivider" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="28" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:alpha="28"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="28"
                        android:background="#FFFFFF"
                        android:clickable="true"
                        app:backgroundTint="#B4FFFFFF"
                        app:srcCompat="@mipmap/micro_foreground" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="297dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:alpha="28"
                        android:text='for example say "diagnostic" \n to add new dignotic record \n for your patient '
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>